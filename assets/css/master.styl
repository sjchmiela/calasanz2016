@media print {
  .nav--lang,  .nav--main, .footer--main {
    visibility: hidden;
  }
  .content--main {
    visibility: visible;
  }
  @page {
    margin-top: .75in;
    margin-bottom: .75in;
  }
  .content--main {
    max-width: 4.95in;
    margin: 0 auto;
  }
  body {
    color: black;
    orphans: 2;
    widows: 2;
  }
  figure, img, a {
    page-break-inside: avoid
  }
}

.es {
  .header--main h1 {
    float: none;
    text-align: center;
    width: 100%;
  }
  nav.nav--main {
    display: none
  }
}

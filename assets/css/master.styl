@import '_settings'
@import url('http://fonts.googleapis.com/css?family=Lato:300,400,700,400italic&subset=latin-ext,latin');

// http://www.modularscale.com/?16&px&1.618,1.236&web&text

normalize-css()

html, body
  background #fff

body
  font-size 100%
  font-family lato
  color #333
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  letter-spacing 0.01rem
  padding 0
  margin 0

hr
  border: 0;
  height: 1px;
  margin 1em 0
  background: linear-gradient(left, white, #aaa, white);
  width 100%
hr.wyd-violet
  background: linear-gradient(left, white, wyd-violet, white);
a
  reset-link()
.italic
  font-style italic
.straight
  font-style normal
.nav--lang
  margin 0 1rem
  padding 0.2rem 0
  fs: 0.809rem
  text-align right
  line-height 1rem
  color gray
  border-bottom 1px solid lighten(gray, 10)
  li
    display inline-block
  a
    color gray
    font-weight bold
    padding 0 0.429rem
    &.is-current
      color black
  li:last-child a
    padding-right 0

#cookies-message
  padding 0.618rem 1rem
  box-sizing: border-box
  fs: 1rem
  line-height 1.618em
  border-bottom: 1px solid gray
  text-align: center;
  position: fixed;
  top: 0px;
  background-color: silver
  background: rgba(221,221,221,0.93);
  width: 100%;
  z-index: 999;
  box-shadow 0 0 1rem gray
#accept-cookies-checkbox
  button: green
  font-family lato
  margin-left 1rem
h1
  fs 1.888rem
  text-rendering optimizelegibility
  line-height 1em
  text-align center
  font-weight normal
  font-feature-settings "liga", "dlig"
  margin 1.618rem 1rem

.nav--main
  margin 1rem 1rem
  fs 0.9rem
  ul
    padding 0
  li
    display inline-block
    a
      font-weight bold
      color dark-gray
      margin 0
      margin-right 0.858rem
      padding-bottom 2px
      &.is-current
        color wyd-red
        border-bottom 2px solid wyd-red
  li:first-child a
    margin-left 0
  li:last-child a
    margin-right 0

.content--main
  margin 1.618rem 1rem
  clear: both;
.content--main, .tile--content
  p, li, label, figcaption, address
    a
      link(wyd-blue)

.content--wrapper
  clear both
  overflow hidden

.footer--main
  clear both
  margin 1.618rem 1rem
  p
    text-align center
    font-style italic
    fs 0.809rem
  p, a
    color dark-gray

h2
  fs 1.528rem
  font-weight 300
  line-height 0
  margin 0 auto
  padding-top 0.794rem
  color wyd-red
  border-bottom 1px solid wyd-red
  span
    background white
    padding-right 1rem

h3
  fs: 1.236rem
  font-weight bold
  line-height 1.618em
  margin 0 auto
  padding-top 0.794rem

p, address
  fs 1rem
  margin 0.655rem 0
blockquote
  fs 1rem
  margin 0.655rem 2.618rem
h2+section
  padding-top 0.794rem
p, li, address, blockquote
  line-height 1.618rem

.tile--row
  width 100%
  clear both
  margin-top 1em
  display block
  margin-bottom 1em
  text-align center
.tile--row.tile--row
    margin 0
.tile
  display block
  text-align left
  overflow hidden
  position relative
  margin-bottom 1rem
.tile--image
  height 100%
  width 100%
  min-height 100%
  max-height 100%
  display block
  position absolute
  top 0
  left 0
  overflow hidden
  vertical-align middle
  img
    width 100%
    height auto
    display block
    vertical-align middle
.tile--caption
  display table
  clear both
  position absolute
  bottom 0
  left 0
  right 0
  margin 0
  color white
  font-size 1.236rem
  text-shadow: 0 0 0.25em #000;
  text-shadow: 0 0 0.25em rgba(0,0,0,0.9);
  width 100%
  padding 2rem 1rem 1rem
  box-sizing border-box
  background: linear-gradient(to bottom,rgba(0,0,0,0) 0%,rgba(0,0,0,0.3) 75%,rgba(0,0,0,0.3) 100%)
.tile:hover .tile--caption
    text-decoration underline
.tile--3-2
  padding-top 65.74%
  .tile--caption
    fs: 1.618rem
    font-weight 700
.tile--1-1 .tile--caption
  fs: 1rem
.tile--2-2
  padding-top 100%
  .tile--caption
    font-weight 700
.tile--2-1
  padding-top 47.82%
.tile--3-2
  padding-top 65.74%
.tile--1-1, .tile--2-2
  width 47.5%
  padding-top 47.5%
  display inline-block
  margin-right 5%
.tile--2-2.tile--mobile-ending
  width 100%
  padding-top 100%
.tile--mobile-ending
  margin-right 0
.tile--content
  float none
  display block
.js-hide .tile--content
  margin-top 1.618em

.link--tile
  display block
  width 100%
  padding-top 56.25%
  overflow hidden
  position relative
  margin-bottom 1rem
  .link--tile__image
    height 100%
    width 100%
    min-height 100%
    max-height 100%
    display block
    position absolute
    left 0
    top 0
    overflow hidden
    vertical-align middle
    img
      width 100%
      height auto
      display block
      vertical-align middle
  .link--tile__caption
    display table
    clear both
    position absolute
    bottom 0
    left 0
    right 0
    margin 0
    color white
    font-size 1.236rem
    text-shadow: 1px 1px 2px #000;
    width 100%
    padding 2rem 1rem 1rem
    box-sizing border-box
    background: linear-gradient(to bottom,rgba(0,0,0,0) 0%,rgba(0,0,0,0.3) 50%,rgba(0,0,0,0.3) 100%)
  .link--tile__caption.no-shadow
    background: white
  &:hover .link--tile__caption
    text-decoration underline

figure
  margin 1.618rem 0 0.618rem
  text-align center
  figcaption
    font-style italic
    margin-top 1rem
  img
    margin 0 auto

.content--lyrics
  overflow hidden
  float left
  width 47.5%
  &+.content--lyrics
    margin-left 5%
  p
    padding-left 1rem
    text-indent -1rem

.italic
  italic()
.strong
  bold()
.pull-right
  float right
.align-right
  text-align right
.align-center
  text-align center
.wyd-red
  color wyd-red
.wyd-yellow
  color wyd-yellow
.wyd-blue
  color wyd-blue
.wyd-violet
  color wyd-violet

.content--news
  background lighten(wyd-yellow, 97%)
  border 1px solid wyd-yellow
  box-shadow 0 0 0.655em lighten(wyd-yellow, 10%)
  box-sizing border-box
  padding 0 1em
  margin 1em 0.655em 0 0.655em
  ul
    list-style-type none
    padding-left 0

.news--dates li
  font-weight 700
  font-size 0.809em
  text-transform uppercase
  letter-spacing 1px
  color #888
  border-bottom 1px solid #aaa

.news--links li
  font-weight 400
  font-size 1em
  text-transform none
  letter-spacing 0
  color #333
  padding 0.382em 0
  border-bottom none

iframe, img
  max-width 100%

form
  margin-top 0.802rem
.content--map
  width 100%

+html5-inputs()
  input(wyd-blue, 100%)
  font-family lato
  transition none
  box-sizing border-box

label
  label: block
  text-transform uppercase
  letter-spacing 0.3px
  fs: 0.9rem
  line-height 1.618rem
  color #555

input[type=submit]
  button: green 'large'
  font-family lato

.actions
  text-align right

input[type="checkbox"], input[type="radio"]
  margin-right 0.618rem
  margin 0.618rem 0.618rem 0.618rem 0

.field+.field, .field+.actions
  margin-top 1rem

p.news--date
  padding-bottom 1em
  font-style italic
  color #999
  border-bottom 1px solid #bbb

.page--violet
  h2, .nav--main a.is-current
    color wyd-violet
    border-color wyd-violet
.page--blue
  h2, .nav--main a.is-current
    color wyd-blue
    border-color wyd-blue
.page--yellow
  h2, .nav--main a.is-current
    color wyd-yellow
    border-color wyd-yellow

.content--image__1_1
  max-width 40%

.registration-option
  border 1px solid wyd-violet
  border-radius 1em
  padding 0 1em 1em 1em
  margin 1em auto
  h4
    text-align center
  .registration-option--details p
    font-size 0.809em
  .registration-option--linkWrapper
    text-align center
    font-weight bold

.registration-form
  p
    text-align center
    font-size 1.382em
    margin-top 1.618em
    line-height 1.618em
  label
    text-transform none
    font-size 1em
  input[type=text]
    text-align center
  .registration-form-options label, input[type=text]
    border-radius 0.2em
    border 1px solid wyd-violet
    text-transform none
    padding 1em
    margin 1em auto
    cursor pointer
    transition all 0.1s
  .registration-form-options label:hover, input[type=text]:hover
    box-shadow 0 0.056em 0.382em rgba(91,14,197,0.7)
    transition all 0.1s
  .registration-form-options
    text-align center
    vertical-align 0
    input[type=radio]
      display none
    input[type=radio]:checked + label
      box-shadow inset 0 0.09em 0.382em rgba(91,14,197,0.7)
      transition all 0.1s
    input[type=radio]:checked + label:hover
      box-shadow inset 0 0.09em 0.382em rgba(91,14,197,0.4)
      transition all 0.1s


